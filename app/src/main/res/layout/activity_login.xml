<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.buddy.LoginActivity"
    android:orientation="vertical"
    android:background="@mipmap/bg_img">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <!---->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:src="@mipmap/login_in_username_img"></ImageView>

        <EditText
            android:id="@+id/et_zh"
            android:layout_width="220dp"
            android:layout_height="43dp"
            android:hint="@string/app_logo_name"
            android:imeOptions="actionGo"
            android:maxLength="15"
            style="@style/font_twen_black"
            android:singleLine="true"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>
    <!---->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:src="@mipmap/login_in_passward_img"
            android:layout_marginRight="8dp"/>
        <EditText
            android:id="@+id/et_pssword"
            android:layout_width="220dp"
            android:layout_height="43dp"
            android:hint="@string/app_logo_password"
            style="@style/font_twen_black"
            android:textColorHint="#CCCCCC"
            android:inputType="textPassword"
            android:maxLines="1"
            android:imeOptions="actionGo"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="266dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="登入"
        android:textColor="@drawable/text_bluechangwhite"
        style="@style/btn"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_ftp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="忘记密码?"
            android:textColor="@color/colorBule"

            />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:text="注册"
            android:textColor="@color/colorBule" />

        <!-- -->

    </RelativeLayout>
</LinearLayout>