<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_img">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/login_in_username_img"
            />

        <EditText
            android:id="@+id/et_zh2"
            android:layout_width="220dp"
            android:layout_height="43dp"
            android:hint="@string/app_logo_name"
            android:textColorHint="#cccccc"
            android:singleLine="true"
            style="@style/font_twen_black"
            android:maxLength="20"
            android:imeOptions="actionGo"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_yzm"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/login_in_identify_img"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_logo_regiter"
            style="@style/font_twen_black"
            android:textSize="16sp"
            android:textColorHint="@color/colorGray"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_yzm"
            android:layout_toLeftOf="@+id/btn_yzm"
            android:maxLength="6"
            android:singleLine="true"
            android:imeOptions="actionGo">

        </EditText>

        <Button
            android:id="@+id/btn_yzm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            style="@style/btn"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/login_in_passward_img"/>
    <EditText
        android:id="@+id/et_pssword2"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:hint="请输入6-20位数密码"
        style="@style/font_twen_black"
        android:inputType="textPassword"
        android:textColorHint="@color/colorGray"
        android:maxLines="1"
        android:maxLength="20"
        android:imeOptions="actionGo"
        />
</LinearLayout>
<Button
android:id="@+id/btn_register"
android:layout_width="266dp"
android:layout_height="45dp"
android:text="注册"
android:layout_gravity="center_horizontal"
style="@style/btn"
android:layout_marginTop="10dp"
    />

</LinearLayout>