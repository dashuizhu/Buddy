<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rlayout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/btn_white2grey">

        <LinearLayout
            android:id="@+id/line_zuhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E5E5E5" />

            <ImageView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_point_gray_img"
                android:padding="10dp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#E5E5E5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/line_zuhe"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tmie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/line_zuhe"
                android:text="8:00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="AM"
                android:textColor="#999999"

                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout1"
            android:padding="10dp"
            android:text="培养晨读习惯"
            android:gravity="center"
            android:maxLength="9"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_playState"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bluelog"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="未开启"
            android:textColor="#999999"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>