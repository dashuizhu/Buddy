<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:id="@+id/rel_header"
    android:background="@drawable/bg_blue">

    <FrameLayout
        android:id="@+id/layout_header_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="100dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_arrow_left"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_header_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/layout_header_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_height"
        android:minWidth="100dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:id="@+id/text_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/text_normal"
            android:visibility="visible" />
    </FrameLayout>

</RelativeLayout>
