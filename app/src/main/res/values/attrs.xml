<resources>



    <declare-styleable name="CombinationControls">
        <attr name="merge_setup_text" format="string" />
        <attr name="merge_setup_right_text" format="string" />
        <attr name="merge_setup_text_color" format="color" />
        <attr name="right_button" format="reference" />
    </declare-styleable>

    <declare-styleable name="BuddyCircleGroupView">
        <!--起始角度,间隔角度,圈颜色,环半径,半径-->
        <attr name="startAngle" format="integer"></attr>
        <attr name="intervalAngle" format="integer"></attr>
        <attr name="circleColor" format="color"></attr>
        <attr name="ringRadius" format="dimension"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>

    //我的页面itemView属性
    <declare-styleable name="MyItemView">
        <attr format="reference" name="item_icon"/>
        <attr format="reference" name="item_arrows"/>
        <attr format="string" name="item_title"/>
        <attr format="string" name="item_content"/>
        <attr format="boolean" name="item_enable"/>
        <attr format="boolean" name="item_divide"/>
        <attr format="boolean" name="item_checked"/>
        <attr format="boolean" name="item_arrows_show"/>
        <attr format="string" name="item_content_hint" />
    </declare-styleable>

</resources>
